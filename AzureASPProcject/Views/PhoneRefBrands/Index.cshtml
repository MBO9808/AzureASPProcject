@model IEnumerable<AzureASPProcject.PhoneRefBrands>

@{
    ViewBag.Title = "Marki";
}

<h2>Marki telefonów</h2>

<p>
    @Html.ActionLink("Dodaj nową", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PhoneRefBrandName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneRefBrandName)
        </td>
        <td>
            @Html.ActionLink("Edycja", "Edit", new { id=item.PhoneRefBrandID }) |
