@model AzureASPProcject.PhoneDetail

@{
    ViewBag.Title = "Usuń model";
}

<h2>Czy jesteś pewny że chcesz usunąć model telefonu?</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model=> model.PhoneDescription, "Model", htmlAttributes: new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneDescription)
        </dd>

        <dt>
            @Html.LabelFor(model => model.PhoneColor, "Kolor", htmlAttributes: new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneColor)
        </dd>

        <dt>
            @Html.LabelFor(model => model.PhoneRefBrands.PhoneRefBrandName, "Marka", htmlAttributes: new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneRefBrands.PhoneRefBrandName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-default" /> |
            @Html.ActionLink("Powrót do listy", "Index")
        </div>
    }
</div>
